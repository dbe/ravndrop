$buy-button-color: #14CD68;
$buy-button-hover-color: #10A152;

//Button CSS created by site: livetools.uiparade.com
a.buy-button.button {
   border: 0px solid #0a3c59;
   background: $buy-button-color;
   background: -webkit-gradient(linear, left top, left bottom, from($buy-button-color), to($buy-button-color));
   background: -webkit-linear-gradient(top, $buy-button-color, $buy-button-color);
   background: -moz-linear-gradient(top, $buy-button-color, $buy-button-color);
   background: -ms-linear-gradient(top, $buy-button-color, $buy-button-color);
   background: -o-linear-gradient(top, $buy-button-color, $buy-button-color);
   background-image: -ms-linear-gradient(top, $buy-button-color 0%, $buy-button-color 100%);
   padding: 12.5px 25px;
   -webkit-border-radius: 6px;
   -moz-border-radius: 6px;
   border-radius: 6px;
   -webkit-box-shadow: rgba(255,255,255,0.4) 0 0px 0, inset rgba(255,255,255,0.4) 0 1px 0;
   -moz-box-shadow: rgba(255,255,255,0.4) 0 0px 0, inset rgba(255,255,255,0.4) 0 1px 0;
   box-shadow: rgba(255,255,255,0.4) 0 0px 0, inset rgba(255,255,255,0.4) 0 1px 0;
   color: #ffffff;
   font-size: 19px;
   font-family: helvetica, serif;
   font-weight: normal;
   text-decoration: none;
   vertical-align: middle;
}

a.buy-button.button:hover {
   border: 0px solid #0a3c59;
   text-shadow: #3d3d3d 0 1px 0;
   background: $buy-button-hover-color;
   background: -webkit-gradient(linear, left top, left bottom, from($buy-button-hover-color), to($buy-button-hover-color));
   background: -webkit-linear-gradient(top, $buy-button-hover-color, $buy-button-hover-color);
   background: -moz-linear-gradient(top, $buy-button-hover-color, $buy-button-hover-color);
   background: -ms-linear-gradient(top, $buy-button-hover-color, $buy-button-hover-color);
   background: -o-linear-gradient(top, $buy-button-hover-color, $buy-button-hover-color);
   background-image: -ms-linear-gradient(top, $buy-button-hover-color 0%, $buy-button-hover-color 100%);
   color: #fff;
}

